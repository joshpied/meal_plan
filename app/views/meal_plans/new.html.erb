<div class="container">
  <div class="title-container">
    <h1>New Meal Plan</h1>
  </div>
  <div class="card">
    <div class="card-body">
      <%= form_for @meal_plan, url: new_meal_plan_path, method: "GET", html: { class: "form-row" } do |form| %>
        <div class="form-group col-sm-12 col-md-6">
          <%= form.label :start_date %>
          <%= form.text_field :start_date, type: "date", class: "form-control" %>
        </div>

        <div class="form-group col-sm-12 col-md-6">
          <%= form.label :end_date %>
          <%= form.text_field :end_date, type: "date", class: "form-control" %>
        </div>

      <% end %>
    </div>
  </div>

  <h2 class="mt-4">Recipes</h2>

  <%= render partial: "form" %>
</div>