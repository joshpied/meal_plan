<div class="container">
  <div class="title-container">
    <h1>Recipes</h1>
    <%= link_to "New Recipe", new_recipe_path, class: "btn btn-default" %>
  </div>

  <div class="recipes">
    <% @recipes.each do |recipe| %>
      <div class="recipe card">
        <div class="card-body">

          <h4 class="card-title">
            <%= link_to truncate(recipe.name), recipe_path(recipe) %>
          </h4>

          <p class="card-text">
            <%= truncate(recipe.description, length: 150) %>  
          </p>
          
          <%= link_to "Edit", edit_recipe_path(recipe), class: "card-link" %>
          <%= link_to "Delete", recipe_path(recipe), data: {
            confirm: "Are you sure you want to delete: #{recipe.name}?",
          }, method: :delete, class: "card-link text-danger" %>
        
          </div>
      </div>
    <% end %>
  </div>
</div>